<Window x:Class="csharp_net_wpf_notepad_clone.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:csharp_net_wpf_notepad_clone"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <!-- Header -->
            <RowDefinition Height="32"></RowDefinition>
            <!-- Body -->
            <RowDefinition></RowDefinition>
            <!-- Footer -->
            <RowDefinition Height="28"></RowDefinition>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Rectangle Fill="{StaticResource HeaderFooter}"/>
        <!-- Body -->
        <Rectangle Grid.Row="1" Fill="{StaticResource Body}"/>
        <!-- Footer -->
        <Rectangle Grid.Row="2" Fill="{StaticResource HeaderFooter}"/>

    </Grid>
</Window>
